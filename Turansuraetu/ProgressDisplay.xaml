<Window x:Class="Turansuraetu.ProgressDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turansuraetu"
        mc:Ignorable="d"
        Title="Turansuraetu - Translation Progress" Height="100" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Closing="OnClosingWindow">
    <DockPanel>
        <Label DockPanel.Dock="Top" x:Name="ProgressLabel" x:FieldModifier="private"  Content="Doing work..."/>
        <ProgressBar x:Name="Bar" x:FieldModifier="private"/>
    </DockPanel>
</Window>
